<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeView">
        <attr name="mv_interval" format="integer" />
        <attr name="mv_duration" format="integer" />
        <attr name="mv_textSize" format="dimension|reference" />
        <attr name="mv_textColor" format="color|reference" />
        <attr name="mv_singleLine" format="boolean" />
        <attr name="mv_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="mv_direction">
            <enum name="BottomToTop" value="0" />
            <enum name="TopToBottom" value="1" />
            <enum name="RightToLeft" value="2" />
            <enum name="LeftToRight" value="3" />
        </attr>
        <attr name="mv_ellipsize">
            <enum name="marquee" value="3" />
            <enum name="middle" value="2" />
            <enum name="start" value="1" />
            <enum name="none" value="0" />
            <enum name="end" value="4" />
        </attr>
    </declare-styleable>
</resources>
